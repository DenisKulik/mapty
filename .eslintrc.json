{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-undef": "off",
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "comma-dangle": ["error", "only-multiline"],
    "lines-between-class-members": "off",
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          ":": "before"
        }
      }
    ]
  }
}
